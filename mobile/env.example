# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:8000
EXPO_PUBLIC_WS_URL=ws://localhost:8000

# Development Settings
EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0
REACT_NATIVE_PACKAGER_HOSTNAME=0.0.0.0
EXPO_USE_FAST_REFRESH=true

# App Configuration
EXPO_PUBLIC_APP_NAME=TraceWing Mobile
EXPO_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
EXPO_PUBLIC_ENABLE_GEOFENCING=true
EXPO_PUBLIC_ENABLE_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true

# Third-party Services (Optional)
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
EXPO_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Push Notifications
EXPO_PUBLIC_PUSH_NOTIFICATION_KEY=your-expo-push-key

# Build Configuration
EXPO_PUBLIC_BUILD_TARGET=development
EAS_PROJECT_ID=your-eas-project-id 